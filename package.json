{
	"name": "nestjs-starter",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"start": "nx serve",
		"start:api": "nx serve api",
		"build": "nx build",
		"test": "nx test",
		"format:check": "nx format:check",
		"format:write": "nx format:write",
		"affected:lint": "nx affected:lint --maxWarnings 0 --parallel",
		"affected:lint:fix": "nx affected:lint --maxWarnings 0 --parallel --fix",
		"prepare": "husky install && npx prisma generate --schema ./apps/api/schema.prisma",
		"db-format": "npx prisma format --schema ./apps/api/schema.prisma",
		"prelint-staged": "npm run db-format",
		"lint-staged": "nx format:write --uncommitted"
	},
	"private": true,
	"dependencies": {
		"@nestjs/common": "^8.4.7",
		"@nestjs/config": "^2.2.0",
		"@nestjs/core": "^8.4.7",
		"@nestjs/platform-express": "^8.4.7",
		"@prisma/client": "^4.1.0",
		"@quixo3/prisma-session-store": "^3.1.8",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"cookie-parser": "^1.4.6",
		"express-session": "^1.17.3",
		"helmet": "^5.1.0",
		"i18next": "^21.8.14",
		"i18next-http-middleware": "^3.2.1",
		"joi": "^17.6.0",
		"nestjs-pino": "^3.0.0",
		"pino-http": "^8.1.1",
		"pino-pretty": "^8.1.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.5.6",
		"tslib": "^2.4.0"
	},
	"devDependencies": {
		"@nestjs/schematics": "^8.0.11",
		"@nestjs/testing": "^8.4.7",
		"@nrwl/cli": "14.4.3",
		"@nrwl/eslint-plugin-nx": "14.4.3",
		"@nrwl/jest": "14.4.3",
		"@nrwl/linter": "14.4.3",
		"@nrwl/nest": "14.4.3",
		"@nrwl/node": "14.4.3",
		"@nrwl/workspace": "14.4.3",
		"@types/cookie-parser": "^1.4.3",
		"@types/express-session": "^1.17.5",
		"@types/jest": "27.5.1",
		"@types/node": "18.0.6",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "5.30.7",
		"@typescript-eslint/parser": "5.30.7",
		"eslint": "8.20.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"husky": "^8.0.1",
		"jest": "27.5.1",
		"lint-staged": "^13.0.3",
		"nx": "14.4.3",
		"prettier": "2.7.1",
		"prisma": "^4.1.0",
		"ts-jest": "27.1.4",
		"ts-node": "10.9.1",
		"ts-toolbelt": "^9.6.0",
		"typescript": "4.7.4"
	},
	"lint-staged": {
		"*.{ts,tsx,js,css,md,json,prisma}": "npm run lint-staged"
	},
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=8.0.0"
	}
}
