{
	"root": true,
	"ignorePatterns": ["**/*"],
	"plugins": ["@nrwl/nx", "import"],
	"overrides": [
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"rules": {
				"@nrwl/nx/enforce-module-boundaries": [
					"error",
					{
						"enforceBuildableLibDependency": true,
						"allow": [],
						"depConstraints": [
							{
								"sourceTag": "scope:shared",
								"onlyDependOnLibsWithTags": ["scope:shared"]
							},
							{
								"sourceTag": "scope:backend",
								"onlyDependOnLibsWithTags": ["scope:backend", "scope:shared"],
								"notDependOnLibsWithTags": ["scope:frontend"],
								"bannedExternalImports": ["*react*"]
							},
							{
								"sourceTag": "scope:backend-core",
								"onlyDependOnLibsWithTags": ["scope:backend", "scope:shared"],
								"notDependOnLibsWithTags": ["scope:frontend"],
								"bannedExternalImports": ["*react*"]
							},
							{
								"sourceTag": "scope:backend-app",
								"onlyDependOnLibsWithTags": ["scope:backend-core"],
								"notDependOnLibsWithTags": ["scope:frontend"],
								"bannedExternalImports": ["*react*"]
							}
						]
					}
				],
				"import/first": ["error"],
				"import/no-useless-path-segments": ["error"],
				"import/no-duplicates": ["error"],
				"import/order": [
					"error",
					{
						"pathGroups": [
							{
								"pattern": "@nestjs-starter/**",
								"group": "internal"
							}
						],
						"groups": [
							["external", "builtin"],
							"internal",
							["index", "sibling", "parent"],
							"object",
							"type"
						],
						"newlines-between": "always",
						"pathGroupsExcludedImportTypes": ["type"]
					}
				],
				"@typescript-eslint/consistent-type-imports": ["error"],
				"no-console": [
					"error",
					{
						"allow": ["warn", "error"]
					}
				]
			}
		},
		{
			"files": ["*.ts", "*.tsx"],
			"extends": ["plugin:@nrwl/nx/typescript"],
			"rules": {}
		},
		{
			"files": ["*.js", "*.jsx"],
			"extends": ["plugin:@nrwl/nx/javascript"],
			"rules": {}
		}
	]
}
